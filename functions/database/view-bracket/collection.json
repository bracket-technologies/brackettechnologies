{
  "children": [
    {
      "type": "Icon?name=bi-chevron-right;style:[fontSize=1.3rem;width=2.25rem;transition=.2s]"
    },
    {
      "type": "Text?class=dots;text=Collection;style.fontSize=1.3rem"
    },
    {
      "type": "Icon?style.display=none;tooltip.text=create new doc;name=bi-plus;style:[color=#000;fontSize=1.9rem;position=absolute;right=3rem;height=2rem;width=2rem;borderRadius=.25rem];hover.style.color=blue;click:[createNewDocRequest():[collection=collection]]"
    },
    {
      "type": "Icon?tooltip.text=create new collection;name=bi-folder-plus;style:[display=none;color=#000;fontSize=1.7rem;position=absolute;right=.5rem;height=2rem;width=2rem;borderRadius=.25rem];hover.style.color=blue;click:[createNewCollection()]"
    }
  ],
  "view": "View:collection?class=flex pointer align-center;hover.style.backgroundColor=#e9e9e9;style:[minHeight=3rem;width=100%;position=relative]",
  "controls": [
    {
      "event": "mouseenter?lastChild().style().display=flex;2ndLastChild().style().display=flex"
    },
    {
      "event": "mouseleave?lastChild().style().display=none;2ndLastChild().style().display=none"
    },
    {
      "event": "click?searchDocs():[collection=collection;list='collection-list']?!3rdChild().contains():[clicked:()];!lastChild().contains():[clicked:()]"
    }
  ]
}