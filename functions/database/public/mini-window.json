{
    "type": "View?id=mini-window;class=flex-box",
    "style": {
        "position": "absolute",
        "top": "0",
        "left": "0",
        "display": "none",
        "height": "100%",
        "width": "100%",
        "backgroundColor": "#00000050",
        "opacity": "0",
        "transition": "opacity 0.2s",
        "zIndex": "10"
    },
    "children": [{
        "type": "View?style.height=70%;style.width=60%;style.overflowY=auto;style.borderRadius=.5rem;style.backgroundColor=#fff",
        "children": { 
            "type": "View?id=mini-window-view" 
        },
        "controls": [{
            "event": "mouseenter?)(:mini-window-view-mouseenter"
        }, {
            "event": "mouseleave?)(:mini-window-view-mouseenter=false"
        }]
    }],
    "controls": [{
        "event": "mousedown",
        "actions": "setStyle;remove:[():mini-window-view.element.children.0.id]:220?style.display=none>>200;style.opacity=0;().element.scrollTop:[():mini-window-view.parent().id]:200=0?!)(:mini-window-view-mouseenter"
    }]
}